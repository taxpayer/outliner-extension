{
  "manifest_version": 3,
  "name": "Outliner | Improving your reading experience",
  "version": "3.3",
  "description": "Tired of distractions on web pages, I created this extension that uses services that improve your reading experience.",
  "author": "Rodrigo Vasconcellos",
  "icons": {
    "16": "assets/outline-logo-16.png",
    "32": "assets/outline-logo-32.png",
    "48": "assets/outline-logo-48.png",
    "128": "assets/outline-logo.png"
  },
  "action": {
    "default_icon": "assets/outline-logo.png",
    "default_title": "Outliner",
    "default_popup": "options.html"
  },
  "background" : {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ]
}